{% block title %}Vehicle{% endblock %}

{% block body %}
    <h1>Vehicle</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehicle.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ vehicle.name }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ vehicle.brand }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ vehicle.model }}</td>
            </tr>
            <tr>
                <th>ProductYear</th>
                <td>{{ vehicle.productYear }}</td>
            </tr>
            <tr>
                <th>UsedHour</th>
                <td>{{ vehicle.usedHour }}</td>
            </tr>
            <tr>
                <th>IdMotorbox</th>
